{
  "name": "cspace-layout",
  "version": "0.0.2",
  "description": "CollectionSpace layout components",
  "author": "Ray Lee <rhlee@berkeley.edu>",
  "license": "ECL-2.0",
  "keywords": [
    "collectionspace",
    "cspace",
    "layout"
  ],
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "src",
    "styles",
    "images"
  ],
  "repository": "collectionspace/cspace-layout.js",
  "scripts": {
    "build": "npm run build-cjs && npm run build-umd",
    "build-cjs": "cross-env BABEL_ENV=cjs babel ./src -d lib",
    "build-umd": "npm run build-umd-dev && npm run build-umd-prod",
    "build-umd-dev": "webpack",
    "build-umd-prod": "cross-env NODE_ENV=production webpack",
    "check": "npm run lint && npm run test && npm run coverage",
    "clean": "rimraf lib dist coverage",
    "coverage": "istanbul report --root coverage text && istanbul report --root coverage lcov",
    "doc": "documentation readme src/*.js -s \"API\"",
    "lint": "eslint --ext .jsx,.js *.js src test examples",
    "prepublish": "npm run clean && npm run build",
    "start": "cross-env NODE_ENV=test karma start",
    "test": "npm run test-browser",
    "test-specs": "npm run test-browser-specs",
    "test-integration": "npm run test-browser-integration",
    "test-browser": "cross-env NODE_ENV=test karma start --singleRun=true",
    "test-browser-specs": "cross-env NODE_ENV=test karma start --singleRun=true --dir=specs",
    "test-browser-integration": "cross-env NODE_ENV=test karma start --singleRun=true --dir=integration"
  },
  "dependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.1",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.12",
    "cross-env": "^2.0.0",
    "css-loader": "^0.24.0",
    "documentation": "^4.0.0-beta9",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.2.2",
    "file-loader": "^0.9.0",
    "karma": "^1.2.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.1.0",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "nyc": "^8.0.0",
    "postcss-loader": "^0.13.0",
    "postcss-modules-values": "^1.2.2",
    "react-addons-test-utils": "^15.3.1",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.15.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "json"
    ],
    "report-dir": "./coverage/Node.js",
    "sourceMap": false,
    "instrument": false,
    "cache": true
  }
}
